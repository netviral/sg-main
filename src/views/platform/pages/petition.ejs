<style>
    @media (max-width: 768px) {
        .comment-btn {
            margin: 10px 0 10px 0;
        }
    }

    .petition-details {

        text-align: center;
    }

    .victory-box {
        background-color: #eaeff4;
        /* Blue color similar to toofantalks.com */
        color: #000000;
        padding: 20px;
        border-radius: 5px;
        text-align: center;
    }

    .supporters-count {
        font-size: 40px;
        font-weight: bold;
    }

    .comments-section {
        margin-top: 30px;
    }

    /* Custom CSS for comment boxes */
    .comment-container {
        display: flex;
        margin-bottom: 20px;
    }

    .comment-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
        object-fit: cover;
    }

    .comment-content {
        flex-grow: 1;
        background-color: #f2f2f2;
        /* Gray background */
        padding: 10px;
        border-radius: 5px;
    }

    .comment-name {
        font-weight: bold;
    }

    .comment-email {
        font-style: italic;
        color: #888;
    }

    .comment-text {
        margin-top: 5px;
    }

    .btn-sign {
        width: 160px;
        height: 40px;
        font-size: 15px;
        background-color: transparent;
        color: black;
    }
</style>

