    .comment-container {
        display: flex;
        margin-bottom: 20px;
    }

    .comment-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
        object-fit: cover;
    }

    .comment-content {
        flex-grow: 1;
        background-color: #fff;
        /* Gray background */
        padding: 10px;
        border-radius: 5px;
    }

    .comment-name {
        font-weight: bold;
    }

    .comment-email {
        font-style: italic;
        color: #888;
    }

    .comment-text {
        margin-top: 5px;
    }

    .btn-sign {
        width: 160px;
        height: 40px;
        font-size: 15px;
        background-color: transparent;
        color: black;
    }
</style>
